<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pbylicki.cookbook" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/cheflogo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Cookbook" >
        <activity
            android:name=".BrowseActivity_"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyActivity"/>
        <activity android:name=".ProfileActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".AddRecipeActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".EditRecipeActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ViewRecipeActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".LoginActivity_"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"
            android:configChanges="orientation|screenSize"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>
